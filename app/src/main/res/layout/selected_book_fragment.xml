<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_haze">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/selected_book_toolbar_background"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/selected_book_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/all_margin_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_back_brown_24">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/selected_book_share"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_share_brown_24" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/selected_book_image"
                android:layout_width="180dp"
                android:layout_height="230dp"
                android:layout_marginTop="120dp"
                android:backgroundTint="@color/yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_toolbar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_all_small_12_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_toolbar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_my_books_want_read_24"
                android:tint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/selected_book_status"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_toolbar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_name"
                style="@style/TextView.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Название книги"
                android:textSize="@dimen/selected_book_text_size_big_24_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_status" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_author_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Автор:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_all_small_12_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_author"
                style="@style/TextView.Yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="Имя автора"
                android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_author_tag" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toEndOf="@+id/selected_book_image"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_toolbar_background">

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/selected_book_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:isIndicator="true"
                    android:progressTint="@color/black"
                    android:stepSize="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_book_rating_mark"
                    style="@style/TextView.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                    app:layout_constraintBottom_toBottomOf="@+id/selected_book_rating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.106"
                    app:layout_constraintStart_toEndOf="@+id/selected_book_rating"
                    app:layout_constraintTop_toTopOf="@+id/selected_book_rating" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_book_readers_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="читателей оценили"
                    android:textSize="@dimen/text_size_all_small_12_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selected_book_rating" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_book_pages_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="печатных страниц"
                    android:textSize="@dimen/text_size_all_small_12_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selected_book_readers_number" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/selected_book_age_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0+"
                    android:textSize="@dimen/text_size_all_small_12_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/selected_book_pages_number" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/selected_book_subscribe_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="81dp"
                android:layout_height="30dp"
                android:background="@drawable/round_corners_10dp"
                android:backgroundTint="@color/light_grey"
                android:drawableStart="@drawable/ic_my_books_info_premium_24"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_all_small_12_sp"
                app:layout_constraintEnd_toEndOf="@+id/selected_book_image"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="@+id/selected_book_image"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_image" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_margin_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_subscribe_btn">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/selected_book_read_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/all_margin_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_gradient"
                    android:text="@string/selectedBook_read"
                    android:textAllCaps="false"
                    android:textSize="17sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/selected_book_add_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="@drawable/orange_gradient"
                    android:padding="@dimen/all_margin_10dp"
                    android:src="@drawable/ic_selected_book_add_24" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/selected_book_add_premium_card"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="@dimen/all_margin_10dp"
                app:cardCornerRadius="@dimen/all_corner_radius_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/appCompatButton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_my_books_info_premium_24"
                        android:text="@string/selectedBook_premium_text"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selectedBook_premium_free_period"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.040"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatButton" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/all_margin_10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_add_premium_card">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="@string/selectedBook_appreciate_book"
                    android:textAlignment="viewStart" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/selected_book_default_rating"
                    style="@style/Widget.AppCompat.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                style="@style/TextView.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/selectedBook_about_book"
                android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.028"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_style_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                android:background="@drawable/round_rectangle_border"
                android:padding="5dp"
                android:textColor="@color/brown"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_annotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_margin_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_style_tag"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView5"
                style="@style/TextView.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                android:text="@string/selectedBook_language"
                android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_annotation" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_language"
                style="@style/TextView.Brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                android:id="@+id/appCompatTextView8"
                style="@style/TextView.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                android:text="@string/selectedBook_related_series"
                android:textSize="@dimen/book_author_text_size_normal_18_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_language" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/selected_book_series_tag"
                android:visibility="gone"
                style="@style/TextView.Brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView8" />


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/selected_book_related_series_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginEnd="@dimen/all_margin_10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_series_tag" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView3"
                style="@style/TextView.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="8dp"
                android:text="@string/selectedBook_related_books"
                android:textSize="@dimen/selected_book_text_size_medium_18_sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selected_book_related_series_recycler_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_book_related_book_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_margin_10dp"
                android:layout_marginTop="@dimen/selected_book_margin_small_8_dp"
                android:layout_marginEnd="@dimen/all_margin_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>