<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_books_info_item_card"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/my_books_info_item_image1"
            android:layout_width="110dp"
            android:layout_height="180dp"
            android:background="@drawable/round_corners_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/all_margin_5dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:adjustViewBounds="true"
                android:id="@+id/my_books_info_item_image"
                android:layout_width="110dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/my_books_info_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_done_brown_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_books_info_status"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/oval_border_orange"
            android:text="@string/my_books_finished_read"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/my_books_info_item_image1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_books_info_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_all_normal_17_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/my_books_info_item_image1"
            app:layout_constraintTop_toBottomOf="@+id/my_books_info_status" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_books_info_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_all_small_15_sp"
            app:layout_constraintStart_toEndOf="@+id/my_books_info_item_image1"
            app:layout_constraintTop_toBottomOf="@+id/my_books_info_book_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_books_book_info_rating_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_my_books_info_star_24"
            android:padding="0dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_all_small_15_sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/my_books_info_book_author"
            app:layout_constraintTop_toBottomOf="@+id/my_books_info_book_author" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_books_book_info_subscribe_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_my_books_info_premium_24"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="@string/all_standard"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_all_small_15_sp"
            app:layout_constraintStart_toEndOf="@+id/my_books_book_info_rating_btn"
            app:layout_constraintTop_toBottomOf="@+id/my_books_info_book_author" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
