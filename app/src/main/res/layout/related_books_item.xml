<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/related_book_image"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginStart="@dimen/all_margin_10dp"
        android:layout_marginTop="@dimen/related_book_margin_small_5_dp"
        android:layout_marginEnd="@dimen/related_book_margin_small_5_dp"
        android:background="@drawable/round_corners_10dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_series_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_book_round_text_view"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/related_book_rating"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/related_book_rating" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/related_book_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/related_book_image"
        app:layout_constraintStart_toStartOf="@+id/related_book_image"
        app:layout_constraintTop_toBottomOf="@+id/related_book_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_name"
        style="@style/TextView.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/related_book_margin_small_5_dp"
        app:layout_constraintEnd_toEndOf="@+id/related_book_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/related_book_image"
        app:layout_constraintTop_toBottomOf="@+id/related_book_rating" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/related_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/related_book_margin_small_5_dp"
        app:layout_constraintEnd_toEndOf="@+id/related_book_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/related_book_name"
        app:layout_constraintTop_toBottomOf="@+id/related_book_name" />
</androidx.constraintlayout.widget.ConstraintLayout>