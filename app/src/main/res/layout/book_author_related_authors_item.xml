<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/book_author_related_book_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/all_margin_10dp"
        android:layout_marginTop="@dimen/related_book_margin_small_5_dp"
        android:layout_marginEnd="@dimen/related_book_margin_small_5_dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_author_related_author_name"
        style="@style/TextView.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/book_author_small_margin_8_dp"
        app:layout_constraintStart_toStartOf="@+id/book_author_related_book_image"
        app:layout_constraintTop_toBottomOf="@+id/book_author_related_book_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_author_related_author_books_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/book_author_small_margin_8_dp"
        app:layout_constraintStart_toStartOf="@+id/book_author_related_book_image"
        app:layout_constraintTop_toBottomOf="@+id/book_author_related_author_name" />
</androidx.constraintlayout.widget.ConstraintLayout>